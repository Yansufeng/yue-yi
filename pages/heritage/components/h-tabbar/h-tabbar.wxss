/* pages/heritage/components/h-tabbar/h-tabbar.wxss */

.scroll-body {
  white-space: nowrap;
}

.tab {
  position: relative;
  display: inline-block;
  /* width: 11.7vw; */
  height: 44rpx;
  text-align: center;
  font-size: 28rpx;
  line-height: 44rpx;
  margin-right: 20rpx;
  padding: 0 20rpx;
  color: #9B7437;
  --bkg: #F8F4E6;
}

.tab-active {
  color: #FFF;
  --bkg: #B01F1A;
}

/* .tab:first-child {
  margin-left: 4.5vw;
} */

.tab-bkg {
  position: absolute;
  left: 10rpx;
  height: 44rpx;
  width: calc(100% - 20rpx);
  border: 1px solid #D0BFA5;
  border-radius: 5px;
  box-sizing: border-box;
  background-color: var(--bkg);
}

.tab-bkg__c {
  position: absolute;
  left: 0;
  width: 100%;
  height: 32rpx;
  border-left: 1px solid #D0BFA5;
  border-right: 1px solid #D0BFA5;
  border-radius: 32rpx;
  box-sizing: border-box;
  top: 6rpx;
  background-color: var(--bkg);
}

.tab-title {
  z-index: 3;
  position: relative;
}

