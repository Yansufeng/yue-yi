/* pages/heritage/components/proj/proj.wxss */
.title {
  margin-top: 8vw;
}

.tabs {
  margin-top: 3.7vw;
  margin-bottom: 7vw;
}

.card {
  background-color: #FFF;
  border-radius: 20rpx;
  display: flex;
  padding: 2.6vw;
  margin-bottom: 3.2vw;
  box-shadow: 2rpx 10rpx 20rpx 2rpx rgba(155, 116, 55, 0.08);
}

.info {
  width: 52.2vw;
  padding-left: 2.6vw;
  font-size: 28rpx;
  font-weight: 300;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.info-title {
  font-size: 32rpx;
  font-weight: 600;
}

.info-tag {
  background-color: #D0A669;
  padding: 0 10rpx;
  border-radius: 10rpx;
  color: #FFF;
}
