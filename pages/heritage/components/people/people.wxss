/* pages/heritage/components/people/people.wxss */
.title {
  margin-top: 8vw;
}

.tabs {
  margin-top: 3.7vw;
  margin-bottom: 7vw;
}

.card {
  height: 26vw;
  background-color: #F6EEDF;
  margin-bottom: 3.2vw;
  border-radius: 20rpx;
  padding: 4.2vw 2.6vw;
  box-sizing: border-box;
  display: flex;
}

.avatar {
  width: 17.3vw;
  height: 17.3vw;
  margin-right: 2.6vw;
}

.info {
  font-size: 28rpx;
  font-weight: 300;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.name {
  font-size: 32rpx;
  font-weight: 600;
}

.tag {
  padding: 0 10rpx;
  background-color: #D0A669;
  border-radius: 8rpx;
  color: #FFF;
}
