/* pages/map/map.wxss */
.tabs {
  display: flex;
  justify-content: space-around;
  line-height: 12vw;
  font-weight: 300;
}

.tabs .active {
  font-weight: 600;
  color: #9B7437;
  border-bottom: 3px solid rgba(208, 166, 105, 0.6);
}

.map-body {
  width: 100vw;
  height: 64.3vw;
  background-color: #FCF5E7;
}

.map {
  width: 100vw;
  height: 64.3vw;
}

.subtabs {
  display: flex;
  line-height: 12vw;
  position: relative;
}

.bkg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.bkg-i {
  width: 100%;
  height: 50%;
}

.bkg .top {
  background-color: #F3F3F3;
}

.subtab {
  width: 50%;
  text-align: center;
  background-color: #F3F3F3;
  border-radius: 0 0 0 20rpx;
  color: #000;
  font-weight: 300;
}

.subtab:first-child {
  background-color: #FFF;
  border-radius: 0 20rpx 0 0;
  color: #9B7437;
  font-weight: 600;
}

.subtab-2 {
  width: 50%;
  text-align: center;
  background-color: #FFF;
  border-radius: 20rpx 0 0 0;
  color: #9B7437;
  font-weight: 600;
}

.subtab-2:first-child {
  background-color: #F3F3F3;
  border-radius: 0 0 20rpx 0;
  color: #000;
  font-weight: 300;
}

.content {
  padding-bottom: 27vw;
}
