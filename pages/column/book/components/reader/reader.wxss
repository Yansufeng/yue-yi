/* pages/column/book/components/reader/reader.wxss */
.header {
  padding: 0 5vw;
  display: flex;
  align-items: center;
  margin-bottom: 8vw;
}

.title {
  font-size: 42rpx;
  font-weight: 600;
  margin-left: 20rpx;
  position: relative;
  padding: 0 10rpx;
}

.title-content {
  position: relative;
  z-index: 2;
}

.title-line {
  height: 20rpx;
  position: absolute;
  width: 100%;
  background-color: rgba(208, 166, 105, 0.6);
  border-radius: 20rpx;
  bottom: 1rpx;
  left: 0;
  z-index: 1;
}

.tabs {
  white-space: nowrap;
}

.tab {
  display: inline-block;
  margin-right: 5vw;
  height: 9vw;
  position: relative;
  font-weight: 300;
}

.tab:first-child {
  margin-left: 5vw;
}

.active {
  color: #9B7437;
  font-weight: 500;
}

.line {
  width: 4.8vw;
  height: 10rpx;
  background-color: rgba(208, 166, 105, 0.6);
  border-radius: 10rpx;
  position: absolute;
  bottom: 0;
  left: calc(50% - 2.4vw);
}

.books {
  display: flex;
  flex-wrap: wrap;
  padding: 5vw;
}

.book {
  margin-bottom: 5.3vw;
  font-weight: 600;
}

.cover {
  width: 28vw;
  height: 40vw;
  margin-bottom: 3.2vw;
  box-shadow: 0 30rpx 15rpx -20rpx rgba(155, 116, 55, 0.3);
}

.book-mid {
  margin: 0 3vw;
}

.more {
  display: flex;
  justify-content: center;
  color: #9B7437;
  padding-bottom: 10vw;
  align-items: center;
}

