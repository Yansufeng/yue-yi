/* pages/column/activity/activity.wxss */
.cards {
  padding: 4.2vw;
}

.cover {
  width: 100%;
  height: 34vw;
}

.card {
  border-radius: 20rpx;
  box-shadow: 2rpx 10rpx 20rpx 2rpx rgba(155, 116, 55, 0.08);
  height: 70vw;
  overflow: hidden;
  margin-bottom: 3.2vw;
}

.content {
  padding: 3.7vw 3.2vw;
  position: relative;
  font-size: 28rpx;
  font-weight: 300;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 2.6vw;
}
