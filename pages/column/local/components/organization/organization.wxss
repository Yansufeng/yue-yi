/* pages/column/local/components/organization/organization.wxss */
.container{
  padding:3.2vw 4.26vw ;  
}
.container .header{
  padding-bottom: 10.67vw;
}
.container .header .bkg image{
  width: 91.46vw;
  height: 37.33vw;
  border-radius: 16rpx;
}
.container .header .options{
  padding:6.4vw  4vw 0;
  display: flex;
}
.container .header .options image{
  width: 37.6vw;
  height:16vw ;
  border-radius: 20rpx;
}
.container .header .options image:nth-child(1){
  padding-right:8.26vw ;
}
.body .title{
  padding: 0 0 8.33vw 1.06vw ;
  font-size: 36rpx;
  font-weight: 600;  
}
.body .card{
  width: 91.46vw;
  height: 29.86vw;
  display: flex;
  background: #FFFFFF;
  box-shadow: 2rpx 7rpx 16rpx 2rpx rgba(155, 116, 55, 0.08);
  border-radius: 16rpx;
  margin-bottom: 5.33vw;
}
.body .card .cover{
  display: flex;
  align-items: center;
  justify-content: center;
}
 .body .card .cover image{
  width: 32.26vw;
  height:24.53vw ;
  /* border-radius: 12rpx !important; */
}
.body .card .content { 
  position: relative; 
  padding:  2.67vw;
}
.body .card .content .content-title{
  font-size: 30rpx;
  line-height: 48rpx;
  font-weight: 600;
}
.body .card .content .time{
  position: absolute;
  right: 2.67vw;
  bottom: 2.67vw;
  font-size: 24rpx;
  font-weight: 500;
}
.body .card:last-child{
  margin-bottom:0
}