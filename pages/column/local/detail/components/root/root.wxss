/* pages/column/local/detail/components/root/root.wxss */
.root-container{
  padding :0  4.26vw 4vw;
  display: flex;
  flex-direction: column;
}
.root-container .header{
  justify-content: space-between;
  display: flex;
  align-items: center;
}
.root-container .header .title{
  font-size: 36rpx;
  font-weight: 600;
}
.root-container .header .more{
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 26rpx;
  color: #9B7347;
}
 .body {
  padding:5.3vw 0 ;
}
 .body .card{
background: #FFFFFF;
box-shadow: 2rpx 7rpx 16rpx 2rpx rgba(155, 116, 55, 0.08);
border-radius: 16rpx;
display: flex;
margin-bottom:3.2vw;
}
 .body .card:last-child{
  margin-bottom:0
}
 .body .card .cover{
  display: flex;
  align-items: center;
  justify-content: center;
}
 .body .card .cover image{
  width: 32.26vw;
  height:24.53vw ;
  border-radius: 12rpx;
}
 .body .card .content{
 padding:2.67vw;
}
 .body .card .content .title{
  font-size: 32rpx;
  font-weight: 600;
  padding-bottom: 3.2vw;
}
 .body .card .content .text{
  font-size: 24rpx;
  line-height: 48rpx;
  font-weight: 500;
}
.poupBox{
  padding:4.26vw;
}
.poupBox .close{
  display: flex;
  flex-direction: row-reverse;
  color: rgba(155, 116, 55, 0.9);
}/* close */
.poupBox .body {
  padding:4.26vw 0 
}
