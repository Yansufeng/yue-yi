/* pages/column/show/local/detail.wxss */
.bkg {
  filter: blur(20px);
  position: absolute;
  left: -10vw;
  top: -30vw;
  z-index: -1;
}

.cover {
  position: absolute;
  z-index: 2;
  left: 12vw;
  top: 8vw;
}

.content {
  background-color: #FFF;
  min-height: 75vw;
  margin-top: 25vw;
  padding: 4vw;
  padding-top: 29.3vw;
}

.name {
  font-size: 36rpx;
  font-weight: 600;
}

.info-body {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.info {
  display: flex;
  flex-direction: column;
  height: 17vw;
  justify-content: space-evenly;
}

.info-item {
  font-size: 28rpx;
  font-weight: 300;
  display: flex;
  align-items: center;
}

.info-icon {
  margin-right: 20rpx;
}


.actions {
  display: flex;
}

.btn {
  height: 17vw;
  width: 13vw;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
  font-size: 28rpx;
  font-weight: 300;
}

.line {
  margin-top: 2vw;
  margin-bottom: 8vw;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.detail-title {
  font-size: 36rpx;
  font-weight: 600;
}

