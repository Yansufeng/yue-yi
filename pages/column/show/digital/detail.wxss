/* pages/column/show/digital/detail.wxss */
.content {
  padding: 5vw 4vw;
}

.name {
  font-size: 36rpx;
  font-weight: 600;
}

.info-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tag {
  padding: 10rpx 20rpx;
  background-color: #FFF6E5;
  color: #9B7437;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 300;
}

.actions {
  display: flex;
}

.btn {
  height: 17vw;
  width: 13vw;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
  font-size: 28rpx;
  font-weight: 300;
}

.line {
  margin-top: 2vw;
  margin-bottom: 8vw;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.detail-title {
  font-size: 36rpx;
  font-weight: 600;
}

.detail-des {
  font-size: 32rpx;
  font-weight: 300;
  margin-top: 32rpx;
}

