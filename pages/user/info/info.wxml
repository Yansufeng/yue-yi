<!--pages/user/info/info.wxml-->
<view class="body">
  <view class="top">
    <t-input label="用户名" placeholder="请输入文字" value="{{username}}" align="right"></t-input>
    <t-input label="手机号" placeholder="请输入文字" align="right" value="{{tel}}"></t-input>
    <t-input label="姓名" placeholder="请输入文字"  align="right" value="{{name}}"></t-input>
    <t-input label="证件类型" placeholder="请输入文字"  align="right" value="{{type}}"></t-input>
    <t-input label="证件号" placeholder="请输入文字"  align="right" value="{{id}}"></t-input>
</view>
<view class="btn">
  <t-button 
      theme="primary" 
      size="large"    
      class="logOut"
    >退出登录</t-button></view>
</view>
