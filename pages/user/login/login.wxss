/* pages/user/login/login.wxss */
page {
  min-height: 100vh;
  background: linear-gradient(rgba(252, 245, 231, 1), rgba(252, 245, 231, 0));
  padding: 5vw;
  box-sizing: border-box;
}

.top {
  text-align: center;
  margin-bottom: 100rpx;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.4);
}

.title {
  font-size: 56rpx;
  /* font-weight: 600; */
  color: #000;
  margin-bottom: 40rpx;
}

.form {
  --td-input-bg-color: #FFF;
  --td-input-placeholder-text-color: rgba(0, 0, 0, 0.26);
  --td-input-default-text-color: #000;
}

.form .t-input {
  margin-bottom: 5.3vw;
  border-radius: 106rpx;
} 

.form .input-placeholder {
  font-size:  28rpx;
}

.form .code-btn {
  line-height: 70rpx;
  margin: -25rpx 0;
  padding: 0 20rpx;
  border-radius: 80rpx;
  color: #FFF;
  font-size: 28rpx;
  background-color: #B01F1A;
}

.img-test {
  display: flex;
  justify-content: space-between;
}

.img-test-input {
  width: 50vw;
}

.protocol {
  display: flex;
  align-items: center;
  color: rgba(0, 0, 0, 0.4);
}

.pro-btn {
  width: 24rpx;
  height: 24rpx;
  border-radius: 20rpx;
  background-color: #FFF;
  border: 1px solid rgba(0, 0, 0, 0.4);
  margin-right: 10rpx;
}

.pro-active {
  background-color: rgba(176, 31, 26, 0.6);
}

.pro-content {
  color: #B01F1A;
}

.login-btn {
  background-color: rgba(176, 31, 26, 0.6);
  line-height: 100rpx;
  font-size: 32rpx;
  color: #FFF;
  text-align: center;
  border-radius: 100rpx;
  margin-top: 160rpx;
}

.login-active {
  background-color: #B01F1A;
}

.wx-login {
  color: #B01F1A;
  text-align: center;
  margin-top: 80rpx;
}

.popup-body {
  padding: 5vw;
  text-align: center;
  padding-bottom: 10vh;
}

.popup-title {
  font-size: 40rpx;
  margin-bottom: 50rpx;
}
