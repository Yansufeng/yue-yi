/* pages/user/components/signin/signin.wxss */
.check-btn {
  height: 6.4vw;
  width: 11.7vw;
  position: absolute;
  right: 4vw;
  top: 9.3vw;
  background-color: rgba(208, 166, 105, 0.4);
  border-radius: 6.4vw;
  text-align: center;
  line-height: 6.4vw;
  color: #9B7437;
  font-size: 28rpx;
}

.block {
  position: relative;
  width: 64vw;
  height: 64vw;
  background: #fff;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.6);
  padding: 0 4vw;
}

.icon {
  position: relative;
  top: -9vw;
  left: 19vw;
}

.info {
  font-size: 28rpx;
  margin-top: -4vw;
  text-align: center;
  margin-bottom: 4vw;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #9B7437;
}

.close-btn {
  position: absolute;
  left: 50%;
  margin-left: -32rpx;
  bottom: calc(-1 * (48rpx + 64rpx));
}

.rule {
  line-height: 40rpx;
}
