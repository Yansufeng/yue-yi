.body {
  display: flex;
  background-color: #FFF;
  border-radius: 16rpx;
  width: 91vw;
  height: 30vw;
  padding: 2.75vw;
  box-sizing: border-box;
  box-shadow: 1px 4px 8px rgba(155, 116, 55, 0.08);
}

