.img {
  height: 24.5vw;
  width: 32.2vw;
}

.content {
  position: relative;
  margin-left: 2.6vw;
}

.tag {
  position: absolute;
  font-size: 24rpx;
  height: 40rpx;
  width: 10vw;
  line-height: 40rpx;
  text-align: center;
  border-radius: 10rpx;
  background-color: #EBC74A;
  color: #FFF;
}

.title {
  text-indent: 12.6vw;
  font-weight: 600;
}

.info {
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  width: 100%;
  font-size: 28rpx;
}

